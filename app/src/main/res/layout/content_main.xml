<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.grayraven.ectest5.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save!"
        android:id="@+id/btn_doit"
        android:layout_marginTop="69dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btn_read" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read"
        android:id="@+id/btn_read"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/btn_doit"
        android:layout_centerHorizontal="true" />

    <LinearLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/btn_clear"
        android:layout_below="@+id/btn_show_grid"
        android:layout_alignStart="@+id/btn_read"
        android:layout_marginTop="89dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Grid"
        android:id="@+id/btn_show_grid"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="StyleTable"
        android:id="@+id/btn_style_table"
        android:layout_below="@+id/btn_show_grid"
        android:layout_alignEnd="@+id/btn_clear" />
</RelativeLayout>
